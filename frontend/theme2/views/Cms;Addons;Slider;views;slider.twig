
{{ set_assets('applications/Cms/Addons/Articlecategory/assets/css/style.css') }}


<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    {% if show_indicator %}
        <ol class="carousel-indicators">
            {% if sliders|length > 0 %}
                {% for key,slider in sliders %} 
                    <li data-target="#myCarousel" data-slide-to="{{ key }}" {% if key == 0 %}class="active"{% endif%} ></li>
                {% endfor %}
            {% endif %}
        </ol>
    {% endif %}

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        {% if sliders|length > 0 %}
            {% for key,slider in sliders %} 
                <div class="item {% if key == 0 %}active{% endif%}">
                    <img class="hidden-xs" src="{{ resized_image(slider.slider_image, 1000, 300) }}" alt="{{ slider.title }}" title="{{ slider.title }}">
                    <img class="visible-xs" src="{{ resized_image(slider.slider_image, 400, 350) }}" alt="{{ slider.title }}" title="{{ slider.title }}">

                    {% if show_caption %}
                        <div class="carousel-caption">
                            <h3>{{ slider.title }}</h3>
                            <p>
                                {{ slider.description|striptags|truncate(140)|raw }}
                            </p>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        {% else %}
            <div class="item">
                <img src="{{ resized_image('-') }}" alt="{{ slider.title }}">
                {% if show_caption %}
                    <div class="carousel-caption">
                        <p>No Latest Slider</p>
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="fa fa-arrow-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="fa fa-arrow-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>