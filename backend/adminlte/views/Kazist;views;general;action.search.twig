    {% if action_content|trim is not empty and search_content|trim is not empty %}
        <div class="col-md-4 action_content">
            {{ action_content|raw }}
            <div class="clearfix"></div>
        </div>
        <div class="col-md-8 search_content">
            {{ search_content|raw }}
            <div class="clearfix"></div>
        </div>
    {% elseif action_content|trim is not empty  %}
        {{ action_content|raw }}
    {% elseif search_content|trim is not empty %}
        {{ search_content|raw }}
    {% endif%}
<div class="clearfix"></div>
</div>

