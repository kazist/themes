<!DOCTYPE html>
{% import "blocks.index.twig" as block_index %}

{% set top_1_length = top_1|length %}
{% set top_2_length = top_2|length %}
{% set top_3_length = top_3|length %}
{% set top_4_length = top_4|length %}
{% set top_left_length = top_left|length %}
{% set top_right_length = top_right|length %}
{% set content_top_length = content_top|length %}

<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{{ document.title }}</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <!-- Bootstrap 3.3.5 -->
        <!-- Font Awesome -->
        <script src="{{ web_root }}assets/js/jquery.js"/></script>
        {{ set_assets('themes/backend/adminlte/css/skins/_all-skins.css', 'main') }}
        {{ set_assets('themes/backend/adminlte/css/AdminLTE.css', 'main') }}
        {{ set_assets('assets/js/kazist/kazist_adminevents.js', 'main') }}
        {{ set_assets('themes/backend/adminlte/css/style.css', 'main') }}
        {{ set_assets('assets/css/kazist.css', 'main') }}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-black sidebar-mini">
    <div class="wrapper">

        <header class="main-header">

            <!-- Logo -->
            <a href="{{ generate_url('admin.home') }}" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><i class="fa fa-arrow-circle-o-right"></i></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg">Admin</span>
            </a>

            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>

                <a class="btn btn-success btn-sm" href="{{ generate_url('admin.home') }}" title="Dashboard" alt="Dashboard" style="margin-top:7px;">
                    <i class="fa fa-dashboard"></i>
                    Dashboard
                </a>
                {#
                    <a type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#launcherModal" style="margin-top:7px;">
                        <i class="fa fa-dashboard"></i>
                        Dashboard
                    </a>
                 #}

                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="hidden-xs">{{ document.user.name }}</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-body">
                                    {{ block_index.render_block('navbar_user') }}
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="#" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <!-- Control Sidebar Toggle Button -->
                        <li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                        </li>
                    </ul>
                </div>

            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <section class="sidebar">
                {{ block_index.render_block('sidebar', _context) }}
            </section>
        </aside>

        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    {{ document.title }}
                    <small>{{ document.explanation }}</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Dashboard</li>
                </ol>
            </section>

            <section class="content">

                {% include "messages.index.twig" %}

                {% if top_1_length > 0 or top_2_length > 0 or top_3_length > 0 or top_4_length > 0  %}
                    <div class="top-1-to-4-wrapper">
                        {% if top_1_length > 0 %}
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                {{ block_index.render_block('top_1', _context) }}
                            </div>
                        {% endif %}
                        {% if top_2_length > 0 %}
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                {{ block_index.render_block('top_2', _context) }}
                            </div>
                        {% endif %}
                        <div class="clearfix visible-sm-block"></div>
                        {% if top_3_length > 0 %}
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                {{ block_index.render_block('top_3', _context) }}
                            </div>
                        {% endif %}
                        {% if top_4_length > 0 %}
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                {{ block_index.render_block('top_4', _context) }}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                {% if top_left_length > 0 or top_right_length > 0 %}
                    <div class="top-left-n-right-wrapper">

                        {% if top_left_length > 0 %}
                            <div class="col-md-8">
                                {{ block_index.render_block('top_left', _context, true) }}
                            </div>
                        {% endif %}

                        {% if top_right_length > 0 %}
                            <div class="col-md-4">
                                {{ block_index.render_block('top_right', _context, true) }}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                {% if content_top_length > 0 %}
                    <div class="content-top-wrapper">
                        {{ block_index.render_block('content_top', _context, true) }}
                    </div>
                {% endif %}

                {% if response_content != '' %}
                    <div class="main-content">
                        {{ response_content|raw }}
                        <div style="clear:both;"></div>
                    </div>
                {% endif %}

                <div class="row">
                    <div class="col-md-12">
                        {{ block_index.render_block('content_bottom', _context) }}
                    </div><!-- /.col -->
                </div><!-- /.row -->


            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

        <footer class="main-footer">
            <strong>Copyright &copy; 2014-{{ 'now'|date('Y') }} <a href="{{ get_setting('system_template_copyright_link') }}">{{ get_setting('system_template_copyright_link_text') }}</a>.</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
                <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <!-- Home tab content -->
                <div class="tab-pane active" id="control-sidebar-home-tab">
                    {{ block_index.render_block('setting_home', _context) }}
                </div><!-- /.tab-pane -->

                <!-- Settings tab content -->
                <div class="tab-pane" id="control-sidebar-settings-tab">
                    {{ block_index.render_block('setting_general', _context) }}
                </div><!-- /.tab-pane -->
            </div>
        </aside><!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>

    </div><!-- ./wrapper -->

    {{ set_assets('themes/backend/adminlte/plugins/fastclick/fastclick.min.js', 'main') }}
    {{ set_assets('themes/backend/adminlte/js/app.js', 'main') }}
    {{ set_assets('themes/backend/adminlte/js/adminlte.js', 'main') }}
    {{ set_assets('themes/backend/adminlte/js/custom.js', 'main') }}

</body>
</html>
